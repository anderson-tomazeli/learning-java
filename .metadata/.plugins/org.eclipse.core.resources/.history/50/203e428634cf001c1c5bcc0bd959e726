package fundamentos.operadores;

public class Logicos {

	public static void main(String[] args) {
		boolean condicao1 = true;
		boolean condicao2 = 3 > 7;
		
		System.out.println(condicao1 && condicao2);
		System.out.println(condicao1 || condicao2);
		System.out.println(condicao1 ^ condicao2); //Ou exclusivo (XOR)
		System.out.println(!!condicao1);
		System.out.println(!condicao1);
		System.out.println(!condicao2);

		System.out.println("\nTabela verdade E (AND)");
		System.out.println(true && true);
		System.out.println(true && false);
		System.out.println(false && true);  //dead code - when there is false at the left side when AND, java will not check right side
		System.out.println(false && false); //dead code - when there is false at the left side when AND, java will not check right side

		System.out.println("\nTabela verdade OU (OR)");
		System.out.println(true || true);   //dead code - when there is true at the left side when OR, java will not check right side
		System.out.println(true || false);  //dead code - when there is true at the left side when OR, java will not check right side
		System.out.println(false || true);
		System.out.println(false || false);
		
		System.out.println("\nTabela verdade OU Exclusivo (XOR)");
		System.out.println(true ^ true);
		System.out.println(true ^ false);
		System.out.println(false ^ true);
		System.out.println(false ^ false);
		
		System.out.println("\nTabela verdade NEGATIVO (NOT)"); //Operador unário
		System.out.println(!true);
		System.out.println(!false);
		
	}
}
